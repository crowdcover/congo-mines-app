<nav class="top-bar" data-topbar role="navigation" data-options="is_hover: true">

  <ul class="title-area">
    <li class="name"><!-- Leave this empty --></li>
    <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
  </ul>

  <section class="top-bar-section">

    <ul class="left">
      <li class="divider"></li>

      <li class="has-dropdown map-dropdown mining-data">
        <a class="title" href="#">Mining Data <span class="layer-title"></span></a>
        <ul class="dropdown">
          <li onclick="app.clearMap(); app.getGeodata('<%= get_all_deposits_map_url %>', <%= true %>)">
            <a class="add-layer" href="#">Deposits</a>
          </li>
          <li onclick="app.clearMap(); app.getGeodata('<%= get_all_processing_infrastructures_map_path %>', <%= true %>)">
            <a class="add-layer" href="#">Processing Infrastructures</a>
          </li>
          <li onclick="app.clearMap(); app.getGeodata('<%= get_all_social_projects_map_path %>', <%= true %>)">
            <a class="add-layer" href="#">Social Projects</a>
          </li>
        </ul>
      </li>

      <li class="divider"></li>

      <li class="has-dropdown map-dropdown maps">
        <a class="title" href="#">Maps <span class="layer-title"></span></a>
        <ul class="dropdown">
          <% TileLayer.all.each do |tile| %>
            <li>
              <a class="add-layer" href="#" data-id="<%= tile.mapbox_tile_layer %>"><%= tile.label %></a>
            </li>
          <% end %>
        </ul>
      </li>

      <li class="divider"></li>
    </ul>

  </section>
</nav>
