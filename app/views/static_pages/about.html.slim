- if @about
  title = @title_localized
  - tags(meta_title: @title_localized, og_title: @title_localized )

  div.row
    div.large-12.columns
      h1 #{@title_localized} 
  div.row
    div.large-12.columns.pvl.keyline-bottom
      - if I18n.locale = "en"
        div.topic-special_report-content [lang= "en"] = @about.try(:content_en).try(:html_safe)
      - else
        div.topic-special_report-content [lang= "fr"] = @about.try(:content).try(:html_safe)
